{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"~/*": ["*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "tests", "eslint.config.js"]
}
