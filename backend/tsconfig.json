{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["src", "eslint.config.js"],
	"exclude": ["node_modules"]
}
